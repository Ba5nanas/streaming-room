<!doctype html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>
    <%= __('MEETING_ROOM') %>
  </title>
  <link href="https://unpkg.com/video.js/dist/video-js.css" rel="stylesheet">
  <link rel="stylesheet" href="style.css">
</head>

<body>
  <ul class="pages">
    <li class="chat page">
      <div class="chatArea">
        <ul class="messages"></ul>
      </div>
      <input class="inputMessage" placeholder="..." />
    </li>
    <li class="login page">
      <form class="form">
        <p>
          <label for="username" class="title">
            <%= __('WHAT_S_YOUR_NAME') %>
          </label>
          <input id="username" class="usernameInput js-usernameInput" type="text" maxlength="14" required/>

        </p>

        <p>
          <label for="password" class="title">
            <%= __('PASSWORD') %>
          </label>
          <input id="password" class="usernameInput js-passwordInput" type="password" />
        </p>

        <p class="center">
          <button class="submit">
            <%= __('ENTER') %>
          </button>
        </p>

      </form>
    </li>
  </ul>

  <main id="videoContainer" class="main">
    <div class="spinner">
      <div class="dot1"></div>
      <div class="dot2"></div>
    </div>
  </main>

  <main id="adminTools" class="main adminView" style="display: none"></main>

  <script src="https://unpkg.com/video.js/dist/video.js"></script>
  <script src="https://unpkg.com/videojs-contrib-hls/dist/videojs-contrib-hls.js"></script>

  <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
  <!-- based on socket io chat by Grant Timmerman -->
  <script src="/socket.io/socket.io.js"></script>
  <script src="/main.js"></script>
</body>

</html>
